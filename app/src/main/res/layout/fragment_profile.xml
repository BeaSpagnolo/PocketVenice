<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profile_fragment"
    tools:context=".LateralNavbar.Info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_height="250dp"
            android:layout_width="match_parent"
            android:background="#5cc09f">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView_profile"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_baseline_verified_user_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_Welcome"
                android:layout_below="@+id/imageView_profile"
                android:hint="Loading..."
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@color/white">

            <!--Full name -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/profile"
                android:background="@drawable/ic_profile"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_full_name"
                android:layout_alignStart="@+id/profile"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:hint="Loading"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/show_full_name"
                android:background="#000"
                android:id="@+id/divider_name"/>


            <!--age -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/age"
                android:background="@drawable/age"
                android:layout_below="@+id/divider_name"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_age"
                android:layout_alignStart="@+id/age"
                android:layout_marginStart="50dp"
                android:layout_below="@+id/divider_name"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:hint="Loading"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/show_age"
                android:background="#000"
                android:id="@+id/divider_age"/>


            <!--email -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/email"
                android:background="@drawable/ic_mail"
                android:layout_below="@+id/divider_age"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_email"
                android:layout_alignStart="@+id/email"
                android:layout_marginStart="50dp"
                android:layout_below="@+id/divider_age"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:hint="Loading"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/show_email"
                android:background="#000"
                android:id="@+id/divider_email"/>


            <!--phone -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/phone"
                android:background="@drawable/ic_phone"
                android:layout_below="@+id/divider_email"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_phone"
                android:layout_alignStart="@+id/email"
                android:layout_marginStart="50dp"
                android:layout_below="@+id/divider_email"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:hint="Loading"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/show_phone"
                android:background="#000"
                android:id="@+id/divider_phone"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>