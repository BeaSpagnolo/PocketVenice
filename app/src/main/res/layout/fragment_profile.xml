<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LateralNavbar.Info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#b31a34">

            <ImageView
                android:id="@+id/imageView_profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_baseline_verified_user_24"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/show_Welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:hint="@string/loading"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@color/white"
            android:padding="15dp">

            <!--Full name -->
            <ImageView
                android:id="@+id/profile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_profile"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/show_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/profile"
                android:layout_marginStart="50dp"
                android:hint="@string/loading"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/show_full_name"
                android:layout_marginTop="20dp"
                android:background="#000" />


            <!--age -->
            <ImageView
                android:id="@+id/birthdate"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/divider_name"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_baseline_calendar_month_24"
                android:backgroundTint ="@color/black"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/show_birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider_name"
                android:layout_alignStart="@+id/birthdate"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:hint="@string/loading"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_age"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/show_birthdate"
                android:layout_marginTop="20dp"
                android:background="#000" />


            <!--email -->
            <ImageView
                android:id="@+id/email"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/divider_age"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_mail"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/show_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider_age"
                android:layout_alignStart="@+id/email"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:hint="@string/loading"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_email"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/show_email"
                android:layout_marginTop="20dp"
                android:background="#000" />


            <!--phone -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/divider_email"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_phone"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/show_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider_email"
                android:layout_alignStart="@+id/email"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:hint="@string/loading"
                android:textSize="18sp" />

            <View
                android:id="@+id/bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/show_phone"
                android:layout_marginTop="20dp"
                android:background="#000" />

            <TextView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bottom"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginStart="64dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="64dp"
                android:background="@drawable/red_fill__rounded_color"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="@string/edit_profile"
                android:textColor="#c3b377"
                android:textSize="17sp" />

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>