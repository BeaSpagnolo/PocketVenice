<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LateralNavbar.Info"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"

            android:background="#b31a34">

            <ImageView
                android:id="@+id/imageView_info"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:foreground="@mipmap/ic_launcher"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/show_AppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView_info"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:hint="@string/loading"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:padding="15dp">

            <View
                android:id="@+id/divider_member_0"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000" />
            <!--Member 1 -->
            <ImageView
                android:id="@+id/image_member_1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_member_0"
                android:layout_marginTop="12.5dp"
                android:background="@drawable/ic_profile"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/show_member_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_member_0"
                android:layout_marginStart="50dp"
                android:layout_marginTop="12.5dp"
                android:hint="@string/loading"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_member_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/show_member_1"
                android:layout_marginTop="12.5dp"
                android:background="#000" />

            <!--Member 2 -->
            <ImageView
                android:id="@+id/image_member_2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_member_1"
                android:layout_marginTop="12.5dp"
                android:background="@drawable/ic_profile"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/show_member_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_member_1"
                android:layout_marginStart="50dp"
                android:layout_marginTop="12.5dp"
                android:hint="@string/loading"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_member_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/show_member_2"
                android:layout_marginTop="12.5dp"
                android:background="#000" />

            <!--Member 3 -->
            <ImageView
                android:id="@+id/image_member_3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_member_2"
                android:layout_marginTop="12.5dp"
                android:background="@drawable/ic_profile"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/show_member_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_member_2"
                android:layout_marginStart="50dp"
                android:layout_marginTop="12.5dp"
                android:hint="@string/loading"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_member_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/show_member_3"
                android:layout_marginTop="12.5dp"
                android:background="#000" />

            <!--Member 4 -->
            <ImageView
                android:id="@+id/image_member_4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_member_3"
                android:layout_marginTop="12.5dp"
                android:background="@drawable/ic_profile"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/show_member_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_member_3"
                android:layout_marginStart="50dp"
                android:layout_marginTop="12.5dp"
                android:hint="@string/loading"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_member_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/show_member_4"
                android:layout_marginTop="12.5dp"
                android:background="#000" />

            <!--Member 5 -->
            <ImageView
                android:id="@+id/image_member_5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_member_4"
                android:layout_marginTop="12.5dp"
                android:background="@drawable/ic_profile"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/show_member_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_member_4"
                android:layout_marginStart="50dp"
                android:layout_marginTop="12.5dp"
                android:hint="@string/loading"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_member_5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/show_member_5"
                android:layout_marginTop="12.5dp"
                android:background="#000" />

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>