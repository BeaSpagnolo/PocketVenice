<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profile_fragment"
    tools:context=".LateralNavbar.Info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_height="250dp"
            android:layout_width="match_parent"

            android:background="@drawable/ic_launcher_background">

            <ImageView
                android:id="@+id/imageView_info"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:foreground="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_AppName"
                android:layout_below="@+id/imageView_info"
                android:hint="Loading.."
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@color/white">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                android:id="@+id/divider_member_0"/>
            <!--Member 1 -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/image_member_1"
                android:layout_marginTop="12.5dp"
                android:layout_below="@id/divider_member_0"
                android:background="@drawable/ic_profile"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_member_0"
                android:layout_marginTop="12.5dp"
                android:id="@+id/show_member_1"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:hint="Loading"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12.5dp"
                android:layout_below="@+id/show_member_1"
                android:background="#000"
                android:id="@+id/divider_member_1"/>

            <!--Member 2 -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/image_member_2"
                android:layout_marginTop="12.5dp"
                android:layout_below="@id/divider_member_1"
                android:background="@drawable/ic_profile"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_member_2"
                android:layout_below="@id/divider_member_1"
                android:layout_marginTop="12.5dp"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:hint="Loading"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12.5dp"
                android:layout_below="@+id/show_member_2"
                android:background="#000"
                android:id="@+id/divider_member_2"/>

            <!--Member 3 -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/image_member_3"
                android:layout_marginTop="12.5dp"
                android:layout_below="@id/divider_member_2"
                android:background="@drawable/ic_profile"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_member_3"
                android:layout_below="@id/divider_member_2"
                android:layout_marginTop="12.5dp"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:hint="Loading"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12.5dp"
                android:layout_below="@+id/show_member_3"
                android:background="#000"
                android:id="@+id/divider_member_3"/>

            <!--Member 4 -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/image_member_4"
                android:layout_marginTop="12.5dp"
                android:layout_below="@id/divider_member_3"
                android:background="@drawable/ic_profile"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_member_4"
                android:layout_below="@id/divider_member_3"
                android:layout_marginTop="12.5dp"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:hint="Loading"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12.5dp"
                android:layout_below="@+id/show_member_4"
                android:background="#000"
                android:id="@+id/divider_member_4"/>

            <!--Member 5 -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/image_member_5"
                android:layout_marginTop="12.5dp"
                android:layout_below="@id/divider_member_4"
                android:background="@drawable/ic_profile"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_member_5"
                android:layout_below="@id/divider_member_4"
                android:layout_marginTop="12.5dp"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:hint="Loading"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12.5dp"
                android:layout_below="@+id/show_member_5"
                android:background="#000"
                android:id="@+id/divider_member_5"/>

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>